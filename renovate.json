{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "before 9am on monday"
  ],
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "@Till0196"
  ],
  "reviewers": [
    "@Till0196"
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore:",
  "branchPrefix": "renovate/",
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "platformAutomerge": false,
  "automerge": false,
  "major": {
    "automerge": false
  },
  "minor": {
    "automerge": false
  },
  "patch": {
    "automerge": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 9am on monday"
    ]
  },
  "packageRules": [
    {
      "description": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "labels": [
        "github-actions"
      ],
      "schedule": [
        "before 9am on monday"
      ]
    },
    {
      "description": "Docker images (base images)",
      "matchManagers": [
        "dockerfile"
      ],
      "labels": [
        "docker"
      ],
      "schedule": [
        "before 9am on monday"
      ]
    },
    {
      "description": "Custom dantto4k and tsduck versions from custom managers",
      "matchManagers": [
        "custom.regex"
      ],
      "matchPackageNames": [
        "nekohkr/dantto4k",
        "tsduck/tsduck"
      ],
      "labels": [
        "version-update"
      ],
      "schedule": [
        "before 9am on monday"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update versions in docker-bake.hcl",
      "managerFilePatterns": ["docker-bake.hcl"],
      "matchStrings": [
        "# renovate: datasource=github-releases depName=(?<depName>\\S+)\\s*\\n\\s*variable \"[^\"]+\" {\\s*\\n\\s*default = \"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Update TSDUCK_VERSION in Dockerfile",
      "managerFilePatterns": ["dantto4k/Dockerfile"],
      "matchStrings": [
        "# renovate: datasource=github-releases depName=tsduck/tsduck\\s*\\n\\s*ARG TSDUCK_VERSION=(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "tsduck/tsduck",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Update DANTTO4K_VERSION in Dockerfile",
      "managerFilePatterns": ["dantto4k/Dockerfile"],
      "matchStrings": [
        "# renovate: datasource=github-releases depName=nekohkr/dantto4k\\s*\\n\\s*ARG DANTTO4K_VERSION=(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "nekohkr/dantto4k",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    }
  ]
}
